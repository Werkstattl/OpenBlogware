<sw-tabs
    isVertical
    :defaultItem="defaultItem"
    :small="false"
    class="sw-blog__tabs"
    @new-item-active="onChangeTab"
    position-identifier="blog-vertical-tabs"
>
    <template #default="{ active }">
        {% block werkl_block_list_tab_item %}
        <sw-tabs-item :title="$tc('werkl-blog.general.mainMenuItemList')"
                      variant="minimal"
                      :route="{ name: 'blog.module.index' }"
                      :activeTab="active"
                      :native="true"
                      name="blog">
            {{ $tc('werkl-blog.general.mainMenuItemList') }}
        </sw-tabs-item>
        {% endblock %}

        {% block werkl_block_tags_tab_item %}
        <sw-tabs-item :title="$tc('werkl-blog-author.general.mainMenuItemList')"
                      :route="{ name: 'blog.module.author' }"
                      variant="minimal"
                      :activeTab="active"
                      :native="true"
                      name="author">
            {{ $tc('werkl-blog-author.general.mainMenuItemList') }}
        </sw-tabs-item>
        {% endblock %}
    </template>
</sw-tabs>
